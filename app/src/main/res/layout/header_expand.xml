<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:background="@drawable/bg_corner_up"
        android:alpha="0.5"
        android:id="@+id/faketextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/titleExpand"
        android:layout_alignBottom="@+id/titleExpand"
        android:layout_alignLeft="@+id/titleExpand"
        android:layout_alignRight="@+id/titleExpand" />
    <TextView
        android:textColor="@color/color_grey_900"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textSize="17sp"
        android:text="@string/menu_restaunt"
        android:id="@+id/titleExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>