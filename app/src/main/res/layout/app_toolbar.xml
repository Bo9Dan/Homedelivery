<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_color"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:elevation="4dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp">
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlInfoCont"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/search_icon"
                android:src="@drawable/ic_search_white_24dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/menu_icon"
                android:src="@drawable/ic_menu"
                android:padding="8dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:visibility="invisible"
                android:id="@+id/menu_back"
                android:padding="8dp"
                android:background="@drawable/bg_back"
                android:layout_centerVertical="true"
                android:src="@drawable/back_icon"
                android:scaleType="fitCenter"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignTop="@+id/menu_icon"
                android:layout_below="@+id/menu_icon" />

            <LinearLayout
                android:id="@+id/titleCont"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_256"
                    android:id="@+id/titleIcon"
                    android:padding="2dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <TextView
                    android:id="@+id/tvToolbarTitle"
                    style="@style/titleTextStyle"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/llSearchCont"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:background="@drawable/bg_search"
                android:layout_weight="14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginStart="8dp"
                    android:tint="@color/black_color"
                    android:src="@drawable/ic_search_black_18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etSearch_input"
                    android:background="@null"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:hint="Search"
                    android:paddingEnd="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvSearchDisable"
                android:textAlignment="center"
                android:textColor="@color/white_color"
                android:textSize="18dp"
                android:layout_weight="2"
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>


    </FrameLayout>



</android.support.v7.widget.Toolbar>